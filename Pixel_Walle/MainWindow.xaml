<Window x:Class="Pixel_Walle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixel_Walle"
        mc:Ignorable="d"
        Title="PIXEL WALL-E" Height="600" Width="1000">
    <Grid>
        <!-- Definimos las filas y columnas del Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Editor de texto con números de línea -->
        <DockPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Números de línea -->
                <ScrollViewer Name="LineNumberScrollViewer" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" Margin="0,-5,0,0">
                    <TextBlock Name="LineNumbers" FontFamily="Consolas" FontSize="14" VerticalAlignment="Top" TextAlignment="Right" Padding="5" />
                </ScrollViewer>

                <!-- Editor de texto -->
                <ScrollViewer Name="CodeEditorScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Column="1" ScrollChanged="CodeEditorScrollViewer_ScrollChanged">
                    <TextBox Name="CodeEditor" AcceptsReturn="True" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="14" TextWrapping="Wrap" TextChanged="CodeEditor_TextChanged" />
                </ScrollViewer>
            </Grid>
        </DockPanel>

        <!-- Canvas cuadriculado -->
        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="10">
            <Grid Name="CanvasGrid" Background="White" ShowGridLines="False">
                <!-- Las filas y columnas del canvas se generarán dinámicamente en el código detrás -->
            </Grid>
        </ScrollViewer>

        <!-- Controles superiores -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Dimensiones del Canvas:" VerticalAlignment="Center" Margin="5" />
            <TextBox Name="CanvasWidthInput" Width="50" Margin="5" Text="10" />
            <TextBlock Text="x" VerticalAlignment="Center" Margin="5" />
            <TextBox Name="CanvasHeightInput" Width="50" Margin="5" Text="10" />
            <Button Name="ResizeCanvasButton" Content="Redimensionar Canvas" Margin="5" Width="150" Click="ResizeCanvasButton_Click" />
            <Button Name="ExecuteCodeButton" Content="Ejecutar Código" Margin="5" Width="120" Click="Execute" />
            <Button Name="LoadFileButton" Content="Cargar Archivo" Margin="5" Width="120" Click="LoadFileButton_Click" />
            <Button Name="SaveFileButton" Content="Guardar Archivo" Margin="5" Width="120" Click="SaveFileButton_Click" />
        </StackPanel>
    </Grid>
</Window>

